---
const { name: component } = Astro.props;
// import { version } from '../../../package.json';
import { Icon } from 'astro-icon/components';
const linkToComponentOnGitHub = `https://github.com/astro-bootstrap/astro-bootstrap/tree/master/lib/components/${component}.astro`;
const title = "View source file"
---
<a href={linkToComponentOnGitHub} data-bs-toggle="tooltip" data-bs-title={title} target="_blank">
  <div class="link-svg">
    <Icon name="bi:code-slash" />
  </div> 
  <span class="visually-hidden">{title}</span>
</a>

<style>
  .link-svg {
    color: blue;
    height: 2rem;
    width: 2rem;
  }
</style>
