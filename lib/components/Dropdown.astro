---
const { class: className, nav = false } = Astro.props;

export interface Props {
  class?: string;
  nav?: boolean;
}
const Tag = nav ? 'li' : 'div';
---

<Tag class:list={['dropdown', className, { 'nav-item': nav }]}>
  <slot />
</Tag>
<script>
  import Dropdown from 'bootstrap/js/dist/dropdown';
  const toggleElList = document.querySelectorAll('.astro-bs.dropdown-toggle');
  toggleElList.forEach((toggleEl) => new Dropdown(toggleEl));
</script>
